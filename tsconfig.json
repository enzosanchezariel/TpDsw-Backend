{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "ESNext",  // o "CommonJS" si prefieres mayor compatibilidad en Node.js
    "moduleResolution": "node",  // Mejor si no usas un empaquetador como Webpack
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
